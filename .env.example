# Environment Configuration Template

# Canvas API Configuration
# Your Canvas instance URL (e.g., https://canvas.instructure.com or https://yourschool.instructure.com)
CANVAS_API_URL=https://your-canvas-instance.instructure.com

# Canvas API Token - Generate from Account → Settings → Approved Integrations → New Access Token
CANVAS_API_TOKEN=your_api_token_here

# Canvas Course ID - Found in the URL when viewing your course (e.g., /courses/12345)
CANVAS_COURSE_ID=your_course_id_here

# Optional Configuration
DEBUG=false
LOG_LEVEL=INFO

# Gamification Settings
DEFAULT_XP_MULTIPLIER=1.0
MASTERY_THRESHOLD=0.8

# Rate Limiting
API_RATE_LIMIT=100
API_RETRY_ATTEMPTS=3

# Course Deployment Settings
VALIDATE_BEFORE_DEPLOY=true
CREATE_BACKUP=true
